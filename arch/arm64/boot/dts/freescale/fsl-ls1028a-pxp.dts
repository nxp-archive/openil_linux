/dts-v1/;

#include "fsl-ls1028a.dtsi"

/ {
	model = "Layerscape 1028A PXP  model";
	compatible = "fsl,ls1028a-simu", "fsl,ls1028a";

	aliases {
		crypto = &crypto;
	};
};

&dp0 {
	status = "okay";
};

/* l2switch ports */
&switch_port0 {
	phy-connection-type = "internal";
	fixed-link {
		speed = <1000>;
		full-duplex;
	};
};

&switch_port1 {
	phy-connection-type = "internal";
	fixed-link {
		speed = <1000>;
		full-duplex;
	};
};

&switch_port2 {
	phy-connection-type = "internal";
	fixed-link {
		speed = <1000>;
		full-duplex;
	};
};

&switch_port3 {
	phy-connection-type = "internal";
	fixed-link {
		speed = <1000>;
		full-duplex;
	};
};

&edp {
	fsl,no_edid;
	lane_mapping = <0x1b>;
	edp_link_rate = <0x6>;
	edp_num_lanes = <0x4>;
	status = "okay";
};
