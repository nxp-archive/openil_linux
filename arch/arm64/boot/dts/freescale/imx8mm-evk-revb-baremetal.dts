/dts-v1/;

#include "imx8mm-evk.dts"

/ {
	model = "FSL i.MX8MM LPDDR4 EVK RevB  board - Baremetal";

	reserved-memory {
		#address-cells = <2>;
		#size-cells = <2>;
		ranges;

		rpmsg_reserved: rpmsg@0xb8000000 {
			no-map;
			reg = <0 0xb8000000 0 0x400000>;
		};
		bm_reserved: baremetal@0x60000000 {
			no-map;
			reg = <0 0x60000000 0 0x10000000>;
		};
	};
};

/*
 * External OSC is used as PCIe REFCLK on RevC board.
 * Use the -revb.dts file to distiguish the different
 * HW design.
 */
&pcie0{
	ext_osc = <0>;
	status = "okay";
};

&fec1 {
       status = "disabled";
};

&gpio5 {
	status = "disabled";
};

&uart3 {
	status = "disabled";
};
